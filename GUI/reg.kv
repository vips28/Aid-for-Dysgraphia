<MyGrid>
    GridLayout:
        cols:1
        size: root.width-200, root.height-200
        pos: 100,100
        Label:
            text:"Registration Page"
            font_size:(root.width**2+root.height**2)/11**4
        GridLayout:
            cols:2
            Label:
                text:"Name:"
                font_size:(root.width**2+root.height**2)/15**4
                size_hint_y:1
            TextInput:
                multiline:False
                size_hint_y:0.3
                pos_hint:{"x":1,"y":0.3}
            Label:
                text:"Password:"
                font_size:(root.width**2+root.height**2)/15**4
                size_hint_y:1
            TextInput:
                multiline:False
                size_hint_y:0.3
                pos_hint:{"x":1,"y":0.3}
            Label:
                text:"Email:"
                font_size:(root.width**2+root.height**2)/15**4
                size_hint_y:1
            TextInput:
                multiline:False
                size_hint_y:0.3
                pos_hint:{"x":1,"y":0.3}
        
        Button:
            text:"Submit"
            size_hint:0.6,0.6
            font_size:(root.width**2+root.height**2)/13**4
            pos_hint:{"x":0.2,"y":0.2}
            
            